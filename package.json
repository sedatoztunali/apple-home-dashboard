{
  "name": "smart-home-dashboard",
  "version": "1.0.8",
  "description": "Smart Home-inspired dashboard strategy for Home Assistant",
  "main": "smart-home-dashboard.js",
  "scripts": {
    "build": "webpack",
    "build:dev": "webpack --mode=development --watch",
    "deploy": "./deploy.sh",
    "lint": "eslint \"src/**/*.{ts,js}\"",
    "lint:fix": "eslint --fix \"src/**/*.{ts,js}\"",
    "format": "prettier --write \"**/*.{ts,js,json,css,md,yml,yaml}\"",
    "bump": "bump --preid alpha package.json README.md ./src/apple-home-strategy.ts"
  },
  "keywords": [
    "home-assistant",
    "smart-home",
    "dashboard",
    "strategy",
    "ui"
  ],
  "author": "Apple Home Dashboard Team",
  "contributors": [
    {
      "name": "NitayBZ",
      "url": "https://github.com/nitaybz"
    }
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/nitaybz"
  },
  "license": "MIT",
  "dependencies": {
    "@types/sortablejs": "^1.15.8",
    "sortablejs": "^1.15.6"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "prettier": "^3.5.3",
    "ts-loader": "^9.5.0",
    "typescript": "^5.9.2",
    "version-bump-prompt": "^6.0.0",
    "webpack": "^5.101.1",
    "webpack-cli": "^6.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nitaybz/apple-home-dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/nitaybz/apple-home-dashboard/issues"
  },
  "homepage": "https://github.com/nitaybz/apple-home-dashboard#readme",
  "files": [
    "dist/",
    "src/",
    "hacs.json",
    "webpack.config.ts",
    "package.json",
    "README.md"
  ],
  "hacs": {
    "name": "Smart Home Dashboard Strategy",
    "filename": "smart-home-dashboard.js",
    "render_readme": true
  }
}
